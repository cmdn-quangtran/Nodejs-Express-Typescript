{
  "name": "nodejs-express-typescript",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "npm run codegen && tsx build.ts",
    "codegen": "rm -rf src/generated/api && openapi2aspida -i ./openapi.yaml -o src/generated/api && npm run db:generate",
    "config:local": "cp ./.env.local .env",
    "db:generate": "npx prisma generate",
    "db:migrate:dev": "dotenv -e .env.local -- bash -c 'npx prisma migrate dev'",
    "docker:down": "docker compose down",
    "docker:up": "docker compose up -d",
    "fix": "run-s fix:*",
    "fix:format": "prettier --cache --write '**/*.{ts,json,yml,yaml,md}'",
    "fix:lint": "eslint --cache --max-warnings 0 --fix '**/*.{ts,tsx}'",
    "local": "npm run build && dotenv -e .env -- bash -c 'node dist/app.mjs'| pino-pretty",
    "sort": "sort-package-json && npm run sort -ws",
    "start": "node -r esbuild-register",
    "validate": "run-p validate:*",
    "validate:cspell": "cspell '**/*.{ts,tsx}' --cache --gitignore",
    "validate:format": "prettier --cache -c '**/*.{ts,json,yml,yaml,md}'",
    "validate:lint": "eslint --cache --max-warnings 0 '**/*.ts'",
    "validate:tsc": "tsc --noEmit",
    "validate:tsc:watch": "tsc --watch"
  },
  "dependencies": {
    "@prisma/client": "5.11.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/inquirer": "^9.0.7",
    "aspida": "^1.14.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.12",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-oauth2-jwt-bearer": "^1.6.0",
    "express-openapi-validator": "^5.2.0",
    "inversify": "^6.0.2",
    "kysely": "0.27.2",
    "npm-run-all": "^4.1.5",
    "openapi2aspida": "^0.23.2",
    "pg": "8.11.3",
    "pino": "^9.3.2"
  },
  "devDependencies": {
    "@prisma/generator-helper": "5.11.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.11.6",
    "@typescript-eslint/eslint-plugin": "6.18.1",
    "@typescript-eslint/parser": "6.20.0",
    "cspell": "8.6.1",
    "dotenv-cli": "^7.4.2",
    "esbuild": "^0.23.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-strict-dependencies": "1.3.4",
    "eslint-plugin-unused-imports": "3.0.0",
    "globals": "^15.8.0",
    "pino-pretty": "10.3.1",
    "prettier": "3.2.2",
    "prisma": "^5.11.0",
    "prisma-erd-generator": "1.2.5",
    "prisma-kysely": "1.8.0",
    "sort-package-json": "2.10.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  }
}
